{
  "model": {
    "sequence_length": 16,
    "hidden_size": 256,
    "num_lstm_layers": 2,
    "num_classes": 2,
    "feature_dim": 2048
  },
  "training": {
    "batch_size": 8,
    "learning_rate": 1e-4,
    "weight_decay": 1e-5,
    "epochs": 50,
    "early_stopping_patience": 10,
    "gradient_clip_norm": 1.0,
    "scheduler_factor": 0.5,
    "scheduler_patience": 3
  },
  "data": {
    "image_size": [224, 224],
    "normalize_mean": [0.485, 0.456, 0.406],
    "normalize_std": [0.229, 0.224, 0.225],
    "augmentation": {
      "horizontal_flip": 0.5,
      "brightness_contrast": 0.3,
      "random_gamma": 0.3,
      "gauss_noise": 0.2,
      "blur": 0.2
    }
  },
  "inference": {
    "confidence_threshold": 0.5,
    "device": "auto",
    "batch_size": 1
  },
  "web": {
    "host": "0.0.0.0",
    "port": 5000,
    "debug": false,
    "max_file_size": 100,
    "allowed_extensions": ["mp4", "avi", "mov", "mkv", "wmv", "flv", "webm"]
  },
  "paths": {
    "model_checkpoints": "models/checkpoints",
    "data_raw": "data/raw",
    "data_processed": "data/processed",
    "results": "results",
    "uploads": "uploads",
    "logs": "logs"
  }
}
